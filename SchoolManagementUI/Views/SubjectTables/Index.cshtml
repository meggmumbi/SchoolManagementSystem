@model IEnumerable<DatabaseLayer.SubjectTable>

@{
    ViewBag.Title = "Subject";
}


<p>
    @Html.ActionLink("new Subject", "Create", null, new { @class = "btn btn-success" })
</p>
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">All Subjects</h6>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            Subject
                        </th>
                        <th>
                            Reg Date
                        </th>
                        <th>
                            Description
                        </th>
                        <th>
                            Total Marks
                        </th>
                        <th>
                            User
                        </th>
                        <th></th>
                    </tr>
                    </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.RegDate)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Description)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TotalMarks)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.UserTable.FullName)
                            </td>
                            <td class="btn btn-group">

                                @Html.ActionLink("Edit", "Edit", new { id = item.SubjectID }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Details", "Details", new { id = item.SubjectID }, new { @class = "btn btn-info" })
                                @Html.ActionLink("Delete", "Delete", new { id = item.SubjectID }, new { @class = "btn btn-danger" })
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
            </div>
        </div>
    </div>

